<h1>Edit a Location</h1>
<form action="locations/{{location.id}}/edit?_method=PUT" method="POST">
  <div>
    <label for="name">
      Name
    </label>
    <input type="text" name="name" value="{{location.name}}"/>
  </div>
  <div>
    <label for="address">
      Address
    </label>
    <input type="text" address="address" value="{{location.address}}"/>
  </div>
  <div>
    <label for="machines">
      Machines
    </label>
    <input type="text" machines="machines" value="{{location.machines}}"/>
  </div>

  <div>
    <input type="submit" value="Update Project Idea"/>
  </div>
</form>
